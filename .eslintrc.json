{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],        
        "no-console": "off",
        "no-undef": "off",
        "func-names": "off",
        "max-len": "off",
        "no-unused-vars": "warn",
        "linebreak-style": "off",
        "prefer-const": "warn",
        "eol-last": "warn",
        "no-undef-init": "warn",
        "no-plusplus": [0, { "allowForLoopAfterthoughts": true }],
        "no-self-compare": "warn",
        "no-restricted-syntax": "off",
        "guard-for-in": "off",
        "no-restricted-imports": "off",
        "class-methods-use-this": "off",
        "no-return-assign": "off",
        "import/no-extraneous-dependencies" : [ "off" ,  { "devDependencies" : false ,  "optionalDependencies" : false ,  "peerDependencies" : false } ],
        "global-require": "off",
        "no-useless-escape": "off"
    }
}
